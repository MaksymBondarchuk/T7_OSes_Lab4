<Window x:Class="T7_OS_Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T7_OS_Lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="402" Width="600" WindowStartupLocation="CenterScreen" Focusable="False" MinWidth="600" MinHeight="402">
    <Grid>
        <TreeView x:Name="TreeViewTree" Margin="10,10,147,35"/>
        <TextBox x:Name="TextBoxNewIdentifier" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Width="120" Height="20" VerticalAlignment="Bottom" TabIndex="0"/>
        <Button x:Name="ButtonAdd" Content="Add" HorizontalAlignment="Left" Margin="145,0,0,10" Width="75" Click="Badd_Click" Height="20" VerticalAlignment="Bottom" IsDefault="True"/>
        <Button x:Name="ButtonFind" Content="Find" HorizontalAlignment="Left" Margin="225,0,0,10" Width="75" Height="20" VerticalAlignment="Bottom" Click="ButtonFind_Click"/>
        <ListView x:Name="ListViewPath" Margin="0,10,10,35" HorizontalAlignment="Right" Width="132">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Path" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="TextBoxWasFound" Margin="0,0,10,10" TextWrapping="Wrap" HorizontalAlignment="Right" Width="132" Height="20" VerticalAlignment="Bottom" IsReadOnly="True"/>

    </Grid>
</Window>
